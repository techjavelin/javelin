{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "amplify/**/*", "tests/**/*.ts", "scripts/**/*.ts"],
  "exclude": [
    "src/**/__tests__/*",
    "docs/**/*.html" // exclude legacy static HTML docs so TS doesn't try to parse them
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
